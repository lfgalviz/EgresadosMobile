<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="co.edu.uninorte.prospecto" version="1.0.0" versionCode="10">


    <name>¿Que Estudiar?</name>
    <description>Aplicación de la Universidad del Norte</description>
    <author>Universidad del Norte</author>

    <content src="index.html" />


    <preference name="permissions" value="none" />

    <preference name="target-device" value="universal" />

    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="android-installLocation" value="auto" />
    <preference name="orientation" value="portrait" />
    <preference name="AllowInlineMediaPlayback" value="true" />

    <plugin name="cordova-plugin-device"/>
    <plugin name="org.apache.cordova.device-orientation" spec="https://github.com/apache/cordova-plugin-device-orientation"/>
    
    <!-- Barra de arriba -->
    <!--<plugin name="com.phonegap.plugin.statusbar" source="npm" version="1.1.0" />-->
    <plugin name= "org.apache.cordova.statusbar" spec="https://github.com/apache/cordova-plugin-statusbar.git" source="git" />
    <!-- Acceso a internet-->
    <plugin name="cordova-plugin-network-information" />
    <plugin name="cordova-plugin-splashscreen" />
    <!-- Abrir el navegador -->
    <plugin name="org.apache.cordova.inappbrowser" />
    <!-- Alertas -->
    <plugin name="org.apache.cordova.dialogs" />

    <plugin name="nl.x-services.plugins.toast" />
    <plugin name="com.albahra.plugin.networkinterface"  />

    <plugin name="cordova-plugin-whitelist" />

    <!-- for iOS -->
    <feature name="Toast">
        <param name="ios-package" value="Toast" />
    </feature>

    <header-file src="src/ios/Toast+UIView.h" />
    <source-file src="src/ios/Toast+UIView.m" />
    <header-file src="src/ios/Toast.h" />
    <source-file src="src/ios/Toast.m" />

    <framework src="QuartzCore.framework" />

    <!-- for Android -->
    <feature name="Toast">
        <param name="android-package" value="nl.xservices.plugins.Toast" />
    </feature>


    <!-- ICONO ANDROID -->
    <icon src="www/img/icon/icono_android.png" gap:platform="android" gap:qualifier="xhdpi" />

    <icon src="www/img/icon/drawable-ldpi/ic_launcher.png" platform="android" qualifier="ldpi" />
    <icon src="www/img/icon/drawable-mdpi/ic_launcher.png" platform="android" qualifier="mdpi" />
    <icon src="www/img/icon/drawable-hdpi/ic_launcher.png" platform="android" qualifier="hdpi" />
    <icon src="www/img/icon/drawable-xhdpi/ic_launcher.png" platform="android" qualifier="xhdpi" />
    <icon src="www/img/icon/drawable-xxhdpi/ic_launcher.png" platform="android" qualifier="xxhdpi" />
    <icon src="www/img/icon/drawable-xxxhdpi/ic_launcher.png" platform="android" qualifier="fr-xxhdpi" />


    <!-- ICONO IOS -->
    <!-- iPhone 6 / 6+ -->
    <icon src="www/img/icon/Icon-60@3x.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="www/img/icon/Icon-60.png" platform="ios" width="60" height="60" />
    <icon src="www/img/icon/Icon-60@2x.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="www/img/icon/Icon-76.png" platform="ios" width="76" height="76" />
    <icon src="www/img/icon/Icon-76@2x.png" platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="www/img/icon/Icon-Small.png" platform="ios" width="29" height="29" />
    <icon src="www/img/icon/Icon-Small@2x.png" platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="www/img/icon/Icon-Spotlight-40.png" platform="ios" width="40" height="40" />
    <icon src="www/img/icon/Icon-Spotlight-40@2x.png" platform="ios" width="80" height="80" />

    <!-- IOS 6.1 -->
    <!-- iPhone / iPod Touch -->
    <icon src="www/img/icon/Icon.png" platform="ios" width="57" height="57" />
    <icon src="www/img/icon/Icon@2x.png" platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="www/img/icon/Icon-72.png" platform="ios" width="72" height="72" />
    <icon src="www/img/icon/Icon-72@2x.png" platform="ios" width="144" height="144" />

    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="www/img/icon/Icon-Small.png" platform="ios" width="29" height="29" />
    <icon src="www/img/icon/Icon-Small@2x.png" platform="ios" width="58" height="58" />

    <!-- iPad Spotlight and Settings Icon -->
    <icon src="www/img/icon/Icon-Small-50.png" platform="ios" width="50" height="50" />
    <icon src="www/img/icon/Icon-Small-50@2x.png" platform="ios" width="100" height="100" />

    <!--        SPLASH IOS       -->
    <!-- iPhone and iPod touch -->
    <splash src="www/img/splash/splash.png" platform="ios" width="320" height="480" />
    <splash src="www/img/splash/splash@2x.png" platform="ios" width="640" height="960" />
    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="www/img/splash/Default-568@2x.png" platform="ios" width="640" height="1136" />
    <!-- iPhone 6 -->
    <splash src="www/img/splash/Default-667h@2x.png" platform="ios" width="750" height="1334" />
    <splash src="www/img/splash/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
    <splash src="www/img/splash/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />
    <!-- iPad -->
    <splash src="www/img/splash/Default-Portrait1.png" platform="ios" width="768" height="1024" />
    <splash src="www/img/splash/Default-Landscape.png" platform="ios" width="1024" height="768" />
    <!-- Retina iPad -->
    <splash src="www/img/splash/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
    <splash src="www/img/splash/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />

    <!--SPLASH ANDROID-->
    <gap:splash src="www/img/splash/Default-Portrait.png" gap:platform="android" />


    <!--<gap:plugin name="com.phonegap.plugins.facebookconnect" source="pgb" version="0.9.0">
        <param name="APP_ID" value="1048681578553807" />
        <param name="APP_NAME" value="prospecto_uninorte" />
    </gap:plugin>-->
    <plugin spec="https://github.com/jeduan/cordova-plugin-facebook4">
        <param name="APP_ID" value="1048681578553807" />
        <param name="APP_NAME" value="prospecto_uninorte" />
    </plugin>


    <edit-config file="*-Info.plist" mode="merge" target="UIStatusBarHidden">
        <true />
    </edit-config>
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true" />
    </feature>
    <edit-config file="*-Info.plist" mode="merge" target="UIViewControllerBasedStatusBarAppearance">
        <true />
    </edit-config>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#FFFFFF" />
    <preference name="SplashScreenDelay" value="5000" />

    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />


</widget>